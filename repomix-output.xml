        # Run Trivy scan as a Kubernetes job in github-runner namespace
        cat <<EOF | kubectl apply -f -
        apiVersion: batch/v1
        kind: Job
        metadata:
          name: trivy-scan-${{ github.run_id }}
          namespace: github-runner
          labels:
            test-run: "${{ github.run_id }}"
        spec:
          template:
            spec:
              restartPolicy: Never
              containers:
              - name: trivy
