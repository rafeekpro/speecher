                    }
                )

        # Je≈õli nadal brak transkrypcji, u≈ºyj prostej metody
        if not chronological_segments:
            logger.info("U≈ºywam prostej metody z podstawowƒÖ interpunkcjƒÖ")

            # Zbierz wszystkie s≈Çowa bez podzia≈Çu na m√≥wc√≥w
            all_words = []

            for item in items:
                if item.get("alternatives") and len(item["alternatives"]) > 0:
                    word = item["alternatives"][0].get("content", "")

                    # Interpunkcja
                    if item.get("type") == "punctuation":
                        if all_words:
                            all_words[-1] += word
                        continue

                    all_words.append(word)

            if all_words:
                text = " ".join(all_words)

                # ZastƒÖp wielokrotne spacje pojedynczƒÖ spacjƒÖ
                text = " ".join(text.split())

                # Upewnij siƒô, ≈ºe jest wielka litera na poczƒÖtku
                if text and len(text) > 0:
                    text = text[0].upper() + text[1:]

                # Dodaj kropkƒô na ko≈Ñcu zdania, je≈õli nie ma interpunkcji
