    # Stop port forwarding processes
    pkill -f "kubectl port-forward.*$KUBE_NAMESPACE" || true
    
    # Container cleanup if needed
    nerdctl rm -f $(nerdctl ps -aq --filter "label=ci-run=${{ github.run_id }}") || true
