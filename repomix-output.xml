    black==23.11.0 \
    ruff==0.1.0 \
    mypy==1.7.0 \
    bandit==1.7.5 \
    safety==3.0.0

# Create CI runner script
RUN cat > /app/run_ci.sh << 'EOF'
#!/bin/bash
set -euo pipefail

echo "Running CI pipeline..."

# Code formatting check
