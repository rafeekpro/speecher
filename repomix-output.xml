      timeout: 5s
      retries: 5
      start_period: 10s
    networks:
      - speecher-network
    deploy:
      resources:
        limits:
          cpus: '2'
          memory: 2G
        reservations:
          cpus: '1'
          memory: 1G

  # Redis for caching/sessions
  redis:
    image: redis:7-alpine
    container_name: speecher-redis
    restart: always
    ports:
      - "6379:6379"
    command: redis-server --appendonly yes --requirepass ${REDIS_PASSWORD}
