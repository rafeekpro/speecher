            if i > 0:
                output_yaml += "---\n"
            output_yaml += yaml.dump(manifest, default_flow_style=False)
            output_yaml += "\n"
        
        if args.output:
            with open(args.output, 'w') as f:
                f.write(output_yaml)
            print(f"Kubernetes manifests written to {args.output}")
        else:
            print(output_yaml)
            
    except Exception as e:
        print(f"Error converting compose file: {e}")
        sys.exit(1)

